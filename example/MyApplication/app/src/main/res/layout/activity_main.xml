<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/premium_bg"
            tools:ignore="ContentDescription,MissingConstraints" />

        <ImageView
            android:id="@+id/coin_img"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/bg_premium_content_coin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/rules_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_regulations_btn"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="@string/regulation_btn"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="@id/coin_img"
            app:layout_constraintTop_toTopOf="@id/coin_img" />

        <TextView
            android:id="@+id/premium_title_tv"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/content_premium_all_income"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/coin_img"
            app:layout_constraintTop_toTopOf="@id/coin_img" />

        <TextView
            android:id="@+id/coin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:includeFontPadding="false"
            android:textColor="#fff"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/premium_title_tv"
            app:layout_constraintTop_toBottomOf="@id/premium_title_tv"
            tools:text="1111" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="3dp"
            android:text="@string/coins"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/coin_tv"
            app:layout_constraintLeft_toRightOf="@id/coin_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:collapsedTitleGravity="center"
        app:expandedTitleGravity="left">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/content_reward_record"
            android:textColor="#333"
            android:textSize="16sp" />-->

    </com.google.android.material.appbar.CollapsingToolbarLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
